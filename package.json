{
  "name": "knockout-light",
  "version": "1.0.0",
  "description": "Cross-platform blue light filter for Mac and Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac --universal",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win --universal"
  },
  "author": "Knockout Light",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.knockoutlight.app",
    "productName": "Knockout Light",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

